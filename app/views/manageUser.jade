    body
        div#main-wrapper
                div.container
                    if(role=='general')
                        include ./templateGeneral
                    else
                        include ./templateAdmin

                    div.pagename Manage User         
                    div.row
                        div.col-xs-12.col-sm-12.col-md-12.col-lg-12
                       
                            table#tbUser.table.table-striped.table-bordered.table-sm(cellspacing="0" width="100%")
                                thead
                                    tr.header
                                        td(style="font-weight: bold;") ชื่อ นามสกุล
                                        td(style="font-weight: bold;") สิทธิผู้ใช้งาน
                                        td(style="font-weight: bold;") จัดการ
                                tbody
                                   - each item in rows
                                        tr
                                            td= item.fullName
                                            if(item.role=="general") 
                                                td="ผู้ใช้งานทั่วไป" 
                                            else 
                                                td="ผู้ดูแลระบบ"
                                            td 
                                                div(style="display:inline;")
                                                 button.btn.btn-warning.btn-xs(type='submit' style="float:left; ")
                                                    i.fa.fa-pencil-square-o แก้ไข
                                                 button.btn.btn-danger.btn-xs(type='submit' style="float:left; margin-left:10px; ")
                                                    i.fa.fa-pencil-square-o ลบ
                                   
                             

                        
